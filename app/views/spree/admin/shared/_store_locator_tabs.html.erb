<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_product_tabs">
    <%= content_tag :li, :class => ('active' if current == 'Store Locator Details') do %>
      <%= link_to_with_icon 'edit', Spree.t(:details), edit_admin_store_locator_url(@store_locator) %>
    <% end %>
    <%= content_tag :li, :class => ('active' if current == 'Translations') do %>
      <%= link_to_with_icon 'translate', Spree.t(:'i18n.translations'), admin_translations_url('store_locators', @store_locator), title: Spree.t(:'i18n.translations') %>
    <% end %>
  </ul>
<% end %>