<div id="store-locator-container">
  <div id="page-header">
    <h2>Store Locator</h2>
  </div>
  <div id="form-container">
    <form action="#" id="user-location" class="form-inline" method="post">
      <div class="form-input form-group">
        <label for="address">Enter Address or Zip Code:</label>
        <input id="address" class="form-control" name="address" type="text"></input>
      </div>
      <button id="submit" class="btn btn-primary" type="submit">Submit</button>
    </form>
  </div>
  <div id="map-container">
    <div id="loc-list" class="col-md-3">
      <ul id="list"></ul>
    </div>
    <div id="map" class="col-md-9"></div>
  </div>
</div>
<% # jQuery Store Locator assets %>
<%= javascript_include_tag 'lib/handlebars-1.0.0' %>
<%= javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=false' %>
<%= javascript_include_tag 'lib/jquery.storelocator' %>
<script>
  $(function() {
    return $('#map-container').storeLocator({
      dataType: 'json',
      dataLocation: '/store_locator.json',
      lengthUnit: 'km'
    });
  });
</script>
