<div id="store-locator-container">
  <div id="page-header">
    <h2>Store Locator</h2>
  </div>
  <div id="form-container">
    <form action="#" id="user-location" method="post">
      <div id="form-input">
        <label for="address">Enter Address or Zip Code:</label>
        <input id="address" name="address" type="text">/</input>
      </div>
      <button id="submit" type="submit">Submit</button>
    </form>
  </div>
  <div id="map-container">
    <div id="loc-list">
      <ul id="list"></ul>
    </div>
    <div id="map"></div>
  </div>
</div>
<% # jQuery Store Locator assets %>
<%= javascript_include_tag 'lib/handlebars-1.0.0' %>
<%= javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=false' %>
<%= javascript_include_tag 'lib/jquery.storelocator' %>
<coffeescript>
  $ ->
    $('#map-container').storeLocator(
      dataType: 'json'
      dataLocation: '/store_locator.json'
    )
</coffeescript>
